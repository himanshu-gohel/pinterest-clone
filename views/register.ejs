<% include ./partials/header.ejs %>

<div class="w-full h-full bg-center bg-cover bg-zinc-300 flex items-center justify-center">
    <div class="w-[35vw] h-[90vh] bg-white px-[55px] my-auto py-10 rounded-[30px]">
      <h1 class="text-3xl tracking-tight mb-9 text-center leading-none font-semibold text-zinc-700">Create New Account</h1>
      <form action="/register" method="post">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="username" placeholder="Username">        
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="text" name="name" placeholder="Full name">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="email" name="email" placeholder="Email">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="number" name="contact" placeholder="Contact">
        <input class="border-2 rounded-md block mt-2 w-full px-3 py-2" type="password" name="password" placeholder="Password">
        <input class="block mt-2 w-full px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Create New Account">
        <p class="text-xs font-semibold text-zinc-700 mt-6 mx-auto text-center">By continuing, you agree to Pinterest's Terms of Service and acknowledge you've read our Privacy Policy. Notice at collection.</p>
        <a class="inline-block mt-4 text-sm text-center w-full font-semibold text-zinc-600" href="/login">Already a member? Log in</a>
      </form>
    </div>
  </div>
  
<% include ./partials/footer.ejs %>
