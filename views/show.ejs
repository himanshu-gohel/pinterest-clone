<% include ./partials/header.ejs %>

    <div class="w-full min-h-screen px-10 py-8 bg-zinc-800 text-white ">
        <div class="cards flex flex-wrap gap-10">
            <% user.posts.forEach(function(e){ %>
                <div class="card w-32">
                    <div class="w-full h-40 rounded-lg overflow-hidden">
                        <img class="w-full h-full object-cover" src="/images/uploads/<%=e.image%>" alt="">
                    </div>
                    <h5 class="mt-2 text-sm"><%=e.title%></h5>
                    <h6 class="text-xs font-semibold opacity-60"><%= e.description %></h6>
                </div>
            <% }) %> 
        </div>
    </div>

<% include ./partials/footer.ejs %>
